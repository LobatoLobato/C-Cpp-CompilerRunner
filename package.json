{
  "name": "comp",
	"displayName": "Bruno Santos Candido",
	"publisher": "FelipeLobato",
	"description": "Te amo",
	"version": "0.3.0",
	"engines": {
		"vscode": "^1.66.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/LobatoLobato/BrunoSantosCandido.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:cpp",
		"onLanguage:c"
	],
	"main": "./src/extension.js",
	"contributes": {
		"keybindings": [
			{
				"command": "comp.compile",
				"key": "F6"
			},
			{
				"command": "comp.run",
				"key": "F7"
			},
			{
				"command": "comp.compileRun",
				"key": "F8"
			}
		],
		"commands": [
		{
            "command": "comp.compile",
            "title": "Compile"
		},
		{
			"command": "comp.run",
            "title": "Run"
		},
		{
			"command": "comp.compileRun",
            "title": "CompileRun"
		},
		{
			"command": "comp.reloadBT",
			"title": "Reload Buttons"
		}
		],
		"configuration": {
			"type": "object",
			"title": "C/C++ Compiler/Runner",
			"properties": {
				"C/C++ Compiler/Runner": {
					"type": "object",
					"additionalProperties": false,
					"properties": {
						"BTColor": {
							"type": "string",
							"default": "#ff4982",
							"markdownDescription": "Color of the buttons (HEX)"
						}
					}
				}
			}
		}
		
	},
	
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.66.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5",
        "@vscode/test-electron": "^2.1.3"
    }

}

